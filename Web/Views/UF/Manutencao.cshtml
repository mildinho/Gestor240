@model UFDTO;

@{

    ViewData["Title"] = ViewBag.Crud.Titulo;
}

@await Component.InvokeAsync("CRUD")

<form method="post" id="@String.Concat("frm_manutencao_",ViewBag.Crud.Operacao).ToLower()" asp-action="Manutencao">

    <input type="hidden" name="operacao" value="@ViewBag.Crud.Operacao">



    @if (ViewBag.Crud.Operacao != Opcoes.Create)
    {
        <input type="hidden" asp-for="Id" />
    }

    <div class="row">

        <div class="form-group col-2">
            <label asp-for="Sigla"></label>

            @if (ViewBag.Crud.Operacao == Opcoes.Read || ViewBag.Crud.Operacao == Opcoes.Delete)
            {
                <input asp-for="Sigla" class="form-control" placeholder="Digite a Sigla da UF" disabled="disabled">
            }
            else
            {
                <input asp-for="Sigla" class="form-control" placeholder="Digite a Sigla da UF">
            }

            <span asp-validation-for="Sigla" class="text-danger"></span>
        </div>


        <div class="form-group col-8">
            <label asp-for="Descricao"></label>

            @if (ViewBag.Crud.Operacao == Opcoes.Read || ViewBag.Crud.Operacao == Opcoes.Delete)
            {
                <input asp-for="Descricao" class="form-control" placeholder="Digite o Nome da UF" disabled="disabled">
            }
            else
            {
                <input asp-for="Descricao" class="form-control " placeholder="Digite o Nome da UF">
            }

            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>


        <div class="form-group col-2">
            <label asp-for="CodigoFiscal"></label>

            @if (ViewBag.Crud.Operacao == Opcoes.Read || ViewBag.Crud.Operacao == Opcoes.Delete)
            {
                <input asp-for="CodigoFiscal" class="form-control" placeholder="Digite o Código Fiscal" disabled="disabled">
            }
            else
            {
                <input asp-for="CodigoFiscal" class="form-control " placeholder="Digite o Código Fiscal">
            }

            <span asp-validation-for="CodigoFiscal" class="text-danger"></span>
        </div>
    </div>

    @await Component.InvokeAsync("CRUD_Acao")

</form>