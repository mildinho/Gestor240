@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Algo Inesperado Acontece :(</h1>
<h2 class="text-danger">Ocorreu um erro durante o processamento da requisição.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<br />

<h3 class="text-center">Mensagem de Resposta da API:</h3>
<br />
<p>
    <strong>@Html.Raw( Model.Message)</strong>
</p>
